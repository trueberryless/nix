alias nix-switch='sudo darwin-rebuild switch --flake "$NIX_CONFIG_PATH#$(hostname -s)"'
alias nix-update='nix flake update --flake $NIX_CONFIG_PATH'
alias nix-gc='nix-collect-garbage --delete-old'

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

alias ls="eza"
alias l="eza --icons"
alias ll="eza -l --icons"
alias la="eza -laa --icons"

alias tree="eza -T"
alias psg="ps -ef | grep -i"
alias envg="env | grep -i"
